# TMS Environment Variables

# PostgreSQL + PostGIS
POSTGRES_USER=tms
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_DB=tms_db

# Database URL (для приложения)
DATABASE_URL=postgresql+asyncpg://tms:your-postgres-password-here@localhost:5432/tms_db

# Redis
REDIS_URL=redis://localhost:6379/0

# OSRM (маршрутизация)
OSRM_URL=http://osrm:5000

# Photon (геокодинг)
PHOTON_URL=http://photon:2322

# FastAPI
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-me
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-characters

# Logging
LOG_LEVEL=INFO

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/bot/webhook
WEBAPP_URL=https://your-domain.com/webapp
