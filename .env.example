# TMS Environment Variables

# PostgreSQL + PostGIS
POSTGRES_USER=tms
POSTGRES_PASSWORD=tms_secret_change_me
POSTGRES_DB=tms_db

# Database URL (для приложения)
DATABASE_URL=postgresql+asyncpg://tms:tms_secret_change_me@postgis:5432/tms_db

# Redis
REDIS_URL=redis://redis:6379/0

# OSRM (маршрутизация)
OSRM_URL=http://osrm:5000

# Photon (геокодинг)
PHOTON_URL=http://photon:2322

# FastAPI
APP_ENV=production
DEBUG=false
SECRET_KEY=your-secret-key-change-me-use-openssl-rand-hex-32

# Logging
LOG_LEVEL=INFO

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_WEBHOOK_URL=https://myappnf.ru/bot/webhook
WEBAPP_URL=https://myappnf.ru/webapp

# Idempotency
IDEMPOTENCY_TTL_SECONDS=86400

# Security
APP_DOMAIN=myappnf.ru
CORS_ORIGINS=https://myappnf.ru,https://www.myappnf.ru

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_LOCATION=30/minute
